
@inherits AddCustomerDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Customer Quick Add</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Customer" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="lastName">Last name: </label>
                            <InputText id="lastName" class="form-control" @bind-Value="@Customer.Name" placeholder="Enter name"></InputText>
                            <ValidationMessage For="@(() => @Customer.Name)" />
                        </div>

                        <div class="form-group">
                            <label for="firstName">First name: </label>
                            <InputText id="firstName" class="form-control" @bind-Value="@Customer.PostalCode" placeholder="Enter postal code"></InputText>
                            <ValidationMessage For="@(() => Customer.PostalCode)" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email: </label>
                            <InputNumber id="email" class="form-control" @bind-Value="@Customer.Type" placeholder="Enter email"></InputNumber>
                            <ValidationMessage For="@(() => Customer.Type)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save Customer</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}