@page "/customeredit"
@page "/customeredit/{CustomerId}"
@using Blazor.Shared
@inherits CustomerEditBase

<section class="Customer-edit">
    @if (!Saved)
    {
        <h1 class="page-title">Details for @Customer.Name</h1>

        <EditForm Model="@Customer" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">

            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group row">
                <label for="lastName" class="col-sm-3">Name: </label>
                <InputText id="lastName" class="form-control col-sm-8" @bind-Value="@Customer.Name" placeholder="Enter name" @ref="LastNameInputText"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.Name)" />
            </div>

            <div class="form-group row">
                <label for="lastName" class="col-sm-3">Email: </label>
                <InputText id="lastName" class="form-control col-sm-8" @bind-Value="@Customer.Email" placeholder="Enter email"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.Email)" />
            </div>

            <div class="form-group row">
                <label for="firstName" class="col-sm-3">Postal code: </label>
                <InputText id="firstName" class="form-control col-sm-8" @bind-Value="@Customer.PostalCode" placeholder="Enter postal code"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.PostalCode)" />
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="birthdate" class="col-sm-3">Stage: </label>
                        <InputCheckbox id="birthdate" class="form-control col-sm-8" @bind-Value="@Customer.Stage" placeholder="Enter stage"></InputCheckbox>
                        <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.Stage)" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="gender" class="col-sm-3">Gender: </label>
                        <InputSelect id="gender" class="form-control col-sm-8" @bind-Value=@CustomerType>
                            <option value="@(CustomerType.Select)">Select</option>
                            <option value="@(CustomerType.Person)">Person</option>
                            <option value="@(CustomerType.Company)">Company</option>
                        </InputSelect>
                        <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => CustomerType)" />
                    </div>
                </div>
            </div>

            @if (Customer.Type == 1)
            {
                <div class="form-group row">
                    <label for="personCPF" class="col-sm-3">CPF: </label>
                    <InputText id="personCPF" class="form-control col-sm-8" @bind-Value="@Customer.Person.CPF" placeholder="Enter CPF"></InputText>
                    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.Person.CPF)" />
                </div>
            }
            else if (Customer.Type == 2)
            {
                <div class="form-group row">
                    <label for="companyName" class="col-sm-3">Company Name: </label>
                    <InputText id="companyName" class="form-control col-sm-8" @bind-Value="@Customer.Company.Name" placeholder="Enter CPF"></InputText>
                    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.Company.Name)" />
                </div>
                <div class="form-group row">
                    <label for="companyCNPJ" class="col-sm-3">CPNJ: </label>
                    <InputText id="companyCNPJ" class="form-control col-sm-8" @bind-Value="@Customer.Company.CNPJ" placeholder="Enter CPF"></InputText>
                    <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Customer.Company.CNPJ)" />
                </div>
            }

            <button type="submit" class="btn btn-primary edit-btn">Save customer</button>
            <a class="btn btn-outline-primary edit-outline-btn" @onclick="@NavigateToOverview">Cancel</a>
            @if (Customer.Id != Guid.Empty)
            {
                <a class="btn btn-danger" @onclick="@DeleteCustomer">
                    Delete
                </a>
            }
        </EditForm>

    }
    else
    {
        <div class="alert @StatusClass">@Message</div>
        <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Back to overview</a>

    }
</section>
