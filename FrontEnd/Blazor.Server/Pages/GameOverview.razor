@page "/gameoverview"
@inherits GameOverviewBase

<h1 class="page-title">All games</h1>

@if (Games == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Game ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>PostalCode</th>
                <th>Type</th>
                <th>CPF/CNPJ</th>
                <th>Stage</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Games)
            {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
            </tr>
            }
        </tbody>
    </table>
}
